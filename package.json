{
  "name": "Eoracle",
  "description": "Eoracle target solidity smart contracts",
  "version": "1.0.0",
  "dependencies": {
    "hardhat": "^2.17.2",
    "merkletreejs": "^0.3.10",
    "keccak256": "^1.0.6",
    "mcl-wasm": "^1.3.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.0.0",
    "solhint": "^3.6.2",
    "ethers": "^5.7.2",
    "ts-node": "^10.7.0",
    "dotenv": "^16.3.1",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "build": "forge build",
    "deploy:local": "source .env && forge script script/DeployEoracle.s.sol:DeployEoracle",
    "deploy:sepolia": "source .env && forge script script/DeployEoracle.s.sol:DeployEoracle --rpc-url $SEPOLIA_RPC_URL --verify --broadcast --private-key $PRIVATE_KEY",
    "deploy:mainnet": "source .env && forge script script/DeployEoracle.s.sol:DeployEoracle --rpc-url $MAINNET_RPC_URL --verify --broadcast --private-key $PRIVATE_KEY",
    "lint": "npm run lint:sol && npm run prettier:check",
    "lint:sol": "forge fmt --check && solhint {script,src,test}/**/*.sol",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "test:fork:sepolia": "source .env && forge test --match-contract Deploy --rpc-url $SEPOLIA_RPC_URL",
    "test:fork:mainnet": "source .env && forge test --match-contract Deploy --rpc-url $MAINNET_RPC_URL",
    "pre-commit": "npx lint-staged",
    "pre-push": "",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{json,md,yml}": [
      "prettier --write --ignore-path \".prettierignore\""
    ],
    "{script,src,test}/**/*.sol": [
      "forge fmt",
      "solhint -f table --max-warnings 0"
    ]
  }
}
